<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.saxion.kuiperklaczynski.tweethack.gui.SettingsActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tweet_frame_background"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:id="@+id/settingMeteredOverride"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/settingMeteredOverrideTitle"
                        android:id="@+id/textView3"
                        android:layout_weight="1"
                        android:gravity="left|bottom"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        style="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/settingMeteredOverrideText"
                        android:id="@+id/textView"
                        android:gravity="top|left"
                        android:layout_weight="1"
                        android:textSize="10dp"
                        android:layout_marginRight="5dp" />

                </LinearLayout>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/settingMeteredOverrideSwitch"
                    android:checked="false"
                    android:button="@color/colorPrimary"
                    android:gravity="center|end"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
