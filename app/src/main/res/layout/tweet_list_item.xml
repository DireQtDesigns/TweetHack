<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/ms">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leon Klaczynski"
        android:id="@+id/nameView"
        android:layout_alignTop="@+id/avatarView"
        android:layout_toEndOf="@+id/avatarView"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/avatarView"
        android:layout_marginStart="20dp"
        android:src="@drawable/aliens"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Lorum ipsum ik weet de rest niet. Lorum ipsum ik weet de rest niet. Lorum ipsum ik weet de rest niet. Lorum ipsum ik weet de rest niet. "
        android:id="@+id/bodyView"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/avatarView"
        android:layout_toEndOf="@+id/avatarView"
        android:layout_alignLeft="@+id/nameView"
        android:layout_above="@+id/nameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50m ago"
        android:id="@+id/timeView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignTop="@+id/nameView"
        android:layout_alignEnd="@+id/bodyView" />
</RelativeLayout>